<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NewsStream</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous" />
  </head>

  <body>
    <!--Hero page-->
    <section
      class="widthHeight container-fluid d-flex align-items-center justify-content-center">
      <div class="center-div p-4 bg-light rounded-3">
        <h1 class="text-center text-dark fs-3 mb-4">NewsStream</h1>
        <form id="form" action="/getNews" method="post">
          <div class="mb-3">
            <label for="query" class="form-label text-dark">Search Query</label>
            <input
              type="text"
              class="form-control w-100"
              id="query"
              required
              name="query"
              placeholder="Enter your search query" />
          </div>
          <div class="row mb-3">
            <div class="col">
              <label for="startDate" class="form-label text-dark"
                >Start Date</label
              >
              <input
                type="date"
                class="form-control"
                id="startDate"
                name="startDate"
                onkeydown="return false;" />
            </div>
            <div class="col">
              <label for="endDate" class="form-label text-dark">End Date</label>
              <input
                type="date"
                class="form-control"
                id="endDate"
                name="endDate"
                onkeydown="return false;" />
            </div>
          </div>
          <div class="mb-3 form-check">
            <input
              type="checkbox"
              class="form-check-input"
              id="latestNews"
              name="latestNews" />
            <label class="form-check-label text-dark" for="latestNews"
              >Latest News</label
            >
          </div>
          <button type="submit" class="btn btn-primary w-100">Search</button>
        </form>
      </div>
    </section>

    <!--end Hero page-->

    <!-- result page-->
    <!-- end result page -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"></script>
  </body>
  <script>
    function getCurrentDate() {
      const now = new Date();
      const year = now.getFullYear();
      let month = now.getMonth() + 1;
      if (month < 10) {
        month = "0" + month;
      }
      let day = now.getDate();
      if (day < 10) {
        day = "0" + day;
      }
      return year + "-" + month + "-" + day;
    }

    function getMinimumDate() {
      const now = new Date();
      now.setMonth(now.getMonth() - 1); // Subtract 2 months from the current date
      const year = now.getFullYear();
      let month = now.getMonth() + 1;
      if (month < 10) {
        month = "0" + month;
      }
      let day = now.getDate();
      if (day < 10) {
        day = "0" + day;
      }
      return year + "-" + month + "-" + day;
    }

    // Set max attribute for endDate input field
    document.getElementById("endDate").setAttribute("max", getCurrentDate());
    document.getElementById("startDate").setAttribute("max", getCurrentDate());
    document.getElementById("endDate").setAttribute("min", getMinimumDate());
    document.getElementById("startDate").setAttribute("min", getMinimumDate());
  </script>
</html>
