<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>News</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous" />
  </head>
  <body>
    <% function formatDate(dateString) { %> <% const date = new
    Date(dateString); %> <% const year = date.getFullYear(); %> <% const month =
    String(date.getMonth() + 1).padStart(2, '0'); %> <% const day =
    String(date.getDate()).padStart(2, '0'); %> <%= `${year}/${month}/${day}` %>
    <% } %>
    <div class="container mt-5">
      <div class="row">
        <div class="col-md-12">
          <h1 class="text-center fs-1">Latest News</h1>
        </div>
      </div>
      <div id="articleContainer">
        <% articles.forEach(article => { %>
        <div class="row my-4">
          <div class="col-md-12">
            <div class="card border-0 shadow">
              <div class="row g-0">
                <div class="col-lg-6">
                  <div class="card-body">
                    <h5 class="card-title"><%= article.title %></h5>
                    <p class="card-text"><%= article.description %></p>
                    <p class="card-text">
                      <small class="text-muted">
                        Published on <%= formatDate(article.publishedAt) %> |
                        <%= article.author %>
                      </small>
                    </p>

                    <a href="<%= article.url %>" class="btn btn-primary"
                      >Read More</a
                    >
                  </div>
                </div>
                <% if (article.urlToImage) { %>
                <div class="col-lg-6">
                  <img
                    src="<%= article.urlToImage %>"
                    style="max-height: 400px; width: 100%"
                    class="img-fluid rounded-start"
                    alt="URL Image" />
                </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"></script>
  </body>
</html>
